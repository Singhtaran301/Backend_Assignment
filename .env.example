# .env.example

# --- APP SETTINGS ---
# Environment: development, staging, production
ENVIRONMENT=development
# Secret key for JWT signing (Generate a random string for production)
SECRET_KEY=change_me_in_prod
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
LOG_LEVEL=INFO

# --- DATABASE ---
# Format: postgresql+asyncpg://user:pass@host:port/dbname
# Example for Local Docker:
DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/amrutam
# Example for Supabase (Uncomment to use):
# DATABASE_URL=postgresql+asyncpg://postgres.ref:pass@aws-0-region.pooler.supabase.com:6543/postgres

# --- REDIS ---
# Format: redis://host:port/db
REDIS_URL=redis://redis:6379/0